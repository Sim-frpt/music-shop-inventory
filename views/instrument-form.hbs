<div class="container w-75 mt-5">
  <h1 class="mb-5 mx-auto">{{title}}</h1>

  <form action="" method="POST" class="mx-auto mb-5">
    <div class="form-group">
      <label for="instrument-name">Name</label>
      <input
        type="text"
        id="instrument-name"
        class="form-control"
        name="name"
        value="{{name}}"
      >
    </div>
    <div class="form-group">
      <label for="instrument-desc">Description</label>
      <textarea
        class="form-control"
        id="instrument-desc"
        name="description" cols="30" rows="10">{{description}}</textarea>
    </div>
    <div class="form-group">
      <label for="instrument-category">Category</label>
      <select
        class="form-control"
        id="instrument-category"
        name="category">
        <option selected disabled hidden>Select a category</option>
        {{#each categories}}
          <option value="{{this.category_id}}">{{this.name}}</option>
        {{/each}}
      </select>
    </div>
    <div class="form-group">
      <label for="instrument-price">Price</label>
      <input
        type="number"
        step="0.01"
        id="instrument-price"
        class="form-control"
        name="price"
        value="{{price}}"
      >
    </div>
    <div class="form-group">
      <label for="instrument-stock">Stock</label>
      <input
        type="number"
        id="instrument-stock"
        class="form-control"
        name="stock"
        value= "{{stock}}"
      >
    </div>
      <button type="submit" class="btn btn-primary">Submit</button>
  </form>
  {{#if errors}}
  <div>
    {{#each errors}}
      <div class="alert alert-dismissible alert-warning">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <span>{{this.msg}}</span>
      </div>
    {{/each}}
  </div>
  {{/if}}
</div>
