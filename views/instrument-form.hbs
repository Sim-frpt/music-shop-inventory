<div class="container mt-5">
  <h1 class="mb-5 w-75 mx-auto">{{title}}</h1>

  <form action="" method="POST" class="w-75 mx-auto">
    <div class="form-group">
      <label for="instrument-name">Name</label>
      <input
        type="text"
        id="instrument-name"
        class="form-control"
        name="name">
    </div>
    <div class="form-group">
      <label for="instrument-desc">Description</label>
      <textarea
        class="form-control"
        id="instrument-desc"
        name="description" cols="30" rows="10">
      </textarea>
    </div>
    <div class="form-group">
      <label for="instrument-category">Category</label>
      <select
        class="form-control"
        id="instrument-category"
        name="category">
        <option selected disabled hidden>Select a category</option>
        {{#each categories}}
          <option value="{{this.category_id}}">{{this.name}}</option>
        {{/each}}
      </select>
    </div>
    <div class="form-group">
      <label for="instrument-price">Price</label>
      <input
        type="number"
        id="instrument-price"
        class="form-control"
        name="price"
      >
    </div>
    <div class="form-group">
      <label for="instrument-stock">Stock</label>
      <input
        type="number"
        id="instrument-stock"
        class="form-control"
        name="stock"
      >
    </div>
      <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>
