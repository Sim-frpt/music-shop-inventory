<div class="jumbotron">
  <div class="container">
    <h1 class="mb-5">{{title}}</h1>
    <h2 class="text-primary mb-3">{{instrument.name}}</h2>
    <div class="mb-4">
      <a class="btn btn-info mr-3" href="{{baseInstrumentUrl}}/{{instrument.instrument_id}}/update">Edit Instrument</a>
      <button class="btn btn-info" data-toggle="modal" data-target="#delete-inst-modal">
        Delete Instrument
      </button>
    </div>
    <h3 class="mb-3">
      <small class="text-muted">
        <a href="/inventory/category/{{instrument.category_id}}">
          {{instrument.category}}
        </a>
      </small>
    </h3>
    <p class="w-75 instrument-description">{{instrument.description}}</p>
    <ul class="list-group list-unstyled">
      <li class="mb-3">
        <span class="instrument-detail badge badge-primary badge-pill">{{instrument.price}} $</span></li>
      <li>
        <span class="instrument-detail badge badge-info badge-pill">Stock: {{instrument.stock}}</span>
      </li>
    </ul>
  </div>
</div>

{{!-- Delete modal --}}
<div class="modal fade" id="delete-inst-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title text-primary" id="exampleModalLabel">
          {{instrument.name}}
        </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <h6>Please confirm you want to delete this {{instrument.category}}</h6>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <form
          method="POST"
          action="{{baseInstrumentUrl}}/{{instrument.instrument_id}}/delete">
          <input type="hidden" class="form-control" name="instrument_id" value="{{instrument.instrument_id}}" required>
          <button type="submit" class="btn btn-primary">Delete</button>
        </form>
      </div>
    </div>
  </div>
</div>
